{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "files": ["src/types/custom.d.ts"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
